<?xml version="1.0" encoding="utf-8" ?>

<component name="Chat" extends="Group">

    <interface>
        <field id="channel" type="string" onChange="onEnterChannel" alwaysNotify="true" />
        <field id="focusable" type="Boolean" value="true" />
        <field id="loggedInUsername" type="string" value="" />
        <field id="control" type="bool" onChange="onVideoChange" value="false" alwaysNotify="true" />
        <field id="setKeyboardFocus" type="bool" onChange="onSetKeyboardFocus" value="false" />
        <field id="doneFocus" type="Boolean" value="false" />
        <field id="clientInfo" type="assocarray" />
        <field id="clientMessage" type="string" value="" />
    </interface>

    <script type="text/brightscript" uri="Chat.brs" />

    <children>
        
        <Rectangle
            visible="true"
            color="0x18181BFF"
            width="250"
            height="720"
            opacity="0.85"
            translation="[1030,0]" />
        <Rectangle
            id="chatPanel"
            visible="true"
            color="0x00000000"
            width="250"
            height="720"
            opacity="0.8"
            translation="[1030,0]" />
        <SimpleLabel
            translation="[1050,700]"
            text="Press OK to chat..."
            color="0xEFEFF1FF"
            fontSize="12"
            fontUri="pkg:/fonts/Inter-Regular.ttf" />

        <Rectangle
            visible="false"
            color="0x18181BFF"
            width="896"
            height="216"
            translation="[0,504]" />
        
        <Keyboard
            id="keyboard"
            visible="false" 
            translation="[50,350]" >
        </Keyboard>

        <Rectangle
            id="chatButton"
            visible="false"
            color="0x18181BFF"
            width="100"
            height="30"
            translation="[450,650]" >
            <SimpleLabel
                translation="[20,0]"
                text="Chat"
                color="0xEFEFF1FF"
                fontSize="24"
                fontUri="pkg:/fonts/Inter-SemiBold.ttf" />
        </Rectangle>

    </children>

</component>
