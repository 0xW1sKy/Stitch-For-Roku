<?xml version="1.0" encoding="utf-8" ?>

<component name="KeyboardGroup" extends="Group" initialFocus="keyboard">

    <interface>
        <field id="streamUrl" type="uri" />
        <field id="streamerSelectedName" type="string" alwaysNotify="true" />

        <field id="streamerRequested" type="string" />
        <field id="categorySelected" type="string" alwaysNotify="true" />
        <field id="searchText" type="string" alias="keyboard.text" alwaysNotify="true" onChange="onSearchTextChange" />
    </interface>

    <script type="text/brightscript" uri="pkg:/components/KeyboardGroup.brs" />

    <children>

        <Group id="browseButtons">
            <SimpleLabel
                id="liveButton"
                translation="[400,50]"
                text="Streamers"
                color="0xA970FFFF"
                fontSize="32"
                fontUri="pkg:/fonts/Roobert-SemiBold.ttf" >
                <Rectangle
                    id="liveLine"
                    visible="true"
                    color="0xA970FFFF"
                    width="150"
                    height="5"
                    translation="[0,40]" />
            </SimpleLabel> 
            <SimpleLabel
                id="categoryButton"
                translation="[700,50]"
                text="Categories"
                color="0xEFEFF1FF"
                fontSize="32"
                fontUri="pkg:/fonts/Roobert-SemiBold.ttf" >
                <Rectangle
                    id="categoryLine"
                    visible="false"
                    color="0xA970FFFF"
                    width="175"
                    height="5"
                    translation="[0,40]" />
            </SimpleLabel> 
        </Group>
        <SimpleLabel
            id="searchHeader"
            translation="[50,50]"
            text="Search"
            fontSize="48"
            fontUri="pkg:/fonts/Roobert-Bold.ttf" />   
        <MiniKeyboard 
            id="keyboard"
            translation="[50,130]" />
        <MarkupList 
            id="resultList"
            itemComponentName="SearchResultItem"
            numRows="5"
            itemSize="[400,60]"
            itemSpacing="[0,10]"
            translation="[500,200]" />
        <MarkupList 
            id="resultCategoryList"
            itemComponentName="SearchCategoryResultItem"
            numRows="5"
            itemSize="[400,60]"
            itemSpacing="[0,10]"
            translation="[500,200]" />
        

    </children>

</component>
