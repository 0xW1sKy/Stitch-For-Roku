<?xml version="1.0" encoding="utf-8" ?>

<component name="CategoryScene" extends="Group">

    <interface>
        <field id="currentCategory" type="string" alwaysNotify="true" onChange="onCategoryChange" />
        <field id="browseList" type="node" alias="browseList" />
        <field id="streamUrl" type="uri" />
        <field id="streamerRequested" type="string" />
        <field id="clipUrl" type="uri" alwaysNotify="true" />
        <field id="fromClip" type="bool" value="false" />

        <field id="streamerSelectedName" type="string" value="" />
        <field id="streamerSelectedThumbnail" type="string" value="" alwaysNotify="true" />
    </interface>

    <script type="text/brightscript" uri="CategoryScene.brs" />
    <script type="text/brightscript" uri="pkg:/components/util/StringUtils.brs" />

    <children>

        <Group id="browseButtons">
            <SimpleLabel
                id="liveButton"
                translation="[400,60]"
                text="Live Channels"
                color="0xA970FFFF"
                fontSize="32"
                fontUri="pkg:/fonts/Roobert-SemiBold.ttf" >
                <Rectangle
                    id="liveLine"
                    visible="true"
                    color="0xA970FFFF"
                    width="210"
                    height="5"
                    translation="[0,40]" />
            </SimpleLabel>
            <SimpleLabel
                id="clipButton"
                translation="[700,60]"
                text="Clips"
                color="0xEFEFF1FF"
                fontSize="32"
                fontUri="pkg:/fonts/Roobert-SemiBold.ttf" >
                <Rectangle
                    id="clipLine"
                    visible="false"
                    color="0xA970FFFF"
                    width="80"
                    height="5"
                    translation="[0,40]" />
            </SimpleLabel> 
        </Group>
        <SimpleLabel
            id="searchHeader"
            translation="[100,50]"
            text="Browse"
            fontSize="48"
            fontUri="pkg:/fonts/Roobert-Bold.ttf" />  
        <RowList 
            id="browseList"
            itemComponentName="BrowseChannelItem"
            translation = "[100,165]"
			numRows = "2"
			rowItemSize = "[[320,180]]"
			rowItemSpacing = "[[30,0]]"
			itemSize = "[1030,275]"
            focusBitmapUri="pkg:/images/focusIndicator.9.png"
			rowFocusAnimationStyle = "floatingFocus" />
        <RowList 
            id="browseClipsList"
            itemComponentName="BrowseChannelItem"
            translation = "[100,165]"
			numRows = "2"
			rowItemSize = "[[320,180]]"
			rowItemSpacing = "[[30,0]]"
			itemSize = "[1030,275]"
            focusBitmapUri="pkg:/images/focusIndicator.9.png"
			rowFocusAnimationStyle = "floatingFocus" />

    </children>

</component>
