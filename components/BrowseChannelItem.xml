<?xml version="1.0" encoding="utf-8" ?>

<component name="BrowseChannelItem" extends="Group">

    <interface>
        <field id="itemContent" type="node" onChange="showContent" />
    </interface>

    <script type="text/brightscript" uri="pkg:/components/BrowseChannelItem.brs" />

    <children>

        <Poster 
            id="itemThumbnail"
            height = "180"
			width = "320"
			loadWidth = "320"
			loadHeight = "180"
			loadDisplayMode = "scaleToFit" />
        <Label
            id = "itemTitle"
            height = "30"
            width = "320"
            horizAlign = "left"
            color = "0xFFFFFFFF"
            translation = "[0, 190]" >
            <Font role = "font" uri = "pkg:/fonts/Roobert-SemiBold.ttf" size = "16" />
		</Label>
        <Label
            id = "itemStreamer"
            height = "30"
            width = "320"
            horizAlign = "left"
            color = "0xFFFFFFFF"
            translation = "[0, 210]" >
            <Font role = "font" uri = "pkg:/fonts/Roobert-Regular.ttf" size = "16" />
		</Label>
        <Label
            id = "itemCategory"
            height = "30"
            width = "320"
            horizAlign = "left"
            color = "0xFFFFFFFF"
            translation = "[0, 230]" >
            <Font role = "font" uri = "pkg:/fonts/Roobert-Regular.ttf" size = "16" />
		</Label>
        <Rectangle
            id="viewsRect"
            color="0x18181BCC"
            visible="true"
            width="85"
            height="16"
            translation="[2,157]" />
        <Label
            id = "itemViewers"
            height = "30"
            width = "320"
            horizAlign = "left"
            color = "0xFFFFFFFF"
            translation = "[0, 160]" >
            <Font role = "font" uri = "pkg:/fonts/Roobert-Regular.ttf" size = "14" />
		</Label>


    </children>

</component>
