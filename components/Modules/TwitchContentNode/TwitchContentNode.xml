<?xml version="1.0" encoding="utf-8"?>
<component name="TwitchContentNode" extends="ContentNode">
    <script type="text/brightscript" uri="TwitchContentNode.brs" />
    <script type="text/brightscript" uri="pkg:/source/utils/misc.brs" />
    <interface>
        <field id="contentId" type="string" />
        <field id="contentType" type="string" onChange="updateType" />
        <!-- GAME, VOD, LIVE -->
        <field id="previewImageUrl" type="uri" />
        <field id="contentTitle" type="string" onChange="updateTitle" />
        <field id="viewersCount" type="int" onChange="updateViewersDisplay" />
        <!-- raw number, translated to viewersDisplay below -->
        <field id="viewersDisplay" type="string" />
        <field id="streamerDisplayName" type="string" />
        <field id="streamerLogin" type="string" />
        <field id="streamerId" type="string" />
        <field id="streamerProfileImageUrl" type="uri" />
        <field id="followerCount" type="int" onChange="updateFollowerDisplay" />
        <field id="followerDisplay" type="string" />
        <field id="gameDisplayName" type="string" />
        <field id="gameBoxArtUrl" type="uri" />
        <field id="gameId" type="string" />
        <field id="gameName" type="string" />
        <field id="clipSlug" type="string" />
        <field id="datePublished" type="string" onChange="updateRelativePublishDate" />
        <field id="relativePublishDate" type="string" />
    </interface>
</component>