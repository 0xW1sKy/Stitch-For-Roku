<?xml version="1.0" encoding="utf-8"?>

<component name="SidebarItem" extends="Group">

     <interface>
          <field id="twitch_id" type="string" />
          <field id="streamerProfileImage" type="uri" alias="streamerProfile.uri" />
          <field id="display_name" type="string" alias="streamerName.text" />
          <field id="game" type="string" alias="gameId.text" />
          <field id="maskSize" type="vector2d" value="[50,50]" alias="maskId.maskSize" />
          <field id="focused" type="bool" value="false"
               alias="selectionIndicator.visible, selected.visible, streamerName.visible, gameId.visible"
               onChange="handleBoundingWidth" />
          <field id="translation" type="vector2d" alias="parent.translation" />
     </interface>

     <script type="text/brightscript" uri="SidebarItem.brs" />

     <children>
          <Group
               id="parent">
               <Poster
                    id="selectionIndicator"
                    uri="pkg:/images/purple_circle.png"
                    width="52"
                    height="52"
               />
               <Poster
                    id="selected"
                    uri="pkg:/images/barFocusIndicator.9.png"
                    translation="[64, -5]"
                    height="50"
               />
               <MaskGroup
                    id="maskId"
                    maskUri="pkg:/images/profile-mask.png">
                    <Poster
                         id="streamerProfile"
                         width="50"
                         height="50"
                         translation="[0,0]"
                    />
               </MaskGroup>
               <Label
                    id="streamerName"
                    translation="[90,0]">
                    <Font role="font" uri="pkg:/fonts/KlokanTechNotoSansCJK-Bold.otf" size="18" />
               </Label>
               <Label
                    id="gameId"
                    height="20"
                    color="0xC26BE1FF"
                    translation="[90,20]">
                    <Font role="font" uri="pkg:/fonts/KlokanTechNotoSansCJK-Regular.otf" size="14" />
               </Label>
               <!-- <SimpleLabel
               id="streamViewers"
               translation="[303,10]"
               visible="false">
               <Font role="font" uri="pkg:/fonts/KlokanTechNotoSansCJK-Regular.otf" size="12" />
          </SimpleLabel> -->
               <!-- <Poster
               id="redRectangle"
               uri="pkg:/images/red_rectangle.9.png"
               width="240"
               height="28"
               translation="[285,5]" /> -->

          </Group>
     </children>
</component>