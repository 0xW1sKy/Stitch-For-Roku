{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "brightscript",
            "request": "launch",
            "rootDir": "${workspaceFolder}/out/.debugStaging",
            "name": "BrightScript Debug: Launch (Watch)",
            "stopOnEntry": false,
            //kick off the bsc watcher before launching
            "preLaunchTask": "watch",
            "enableDebuggerAutoRecovery": false,
            "stopDebuggerOnAppExit": false
        },
        {
            "type": "brightscript",
            "request": "launch",
            "name": "BrightScript Debug: Launch",
            "rootDir": "${workspaceFolder}/out/.debugStaging",
            "stopOnEntry": false,
            "injectRdbOnDeviceComponent": true,
            "enableDebuggerAutoRecovery": false,
            "stopDebuggerOnAppExit": false,
            "enableDebugProtocol": true,
            "rendezvousTracking": false,
            //run the BrighterScript build before each launch
            "preLaunchTask": "build"
        }
    ]
}